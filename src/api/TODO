// API routes

POST    /admin/login                Admin:logIn
POST    /admin/logout               Admin:logOut
POST    /admin/authenticate         Admin:authenticate

GET     /admin/authors              Admin:getAuthors
POST    /admin/authors              Admin:newAuthor

GET     /admin/authors/:id          Admin:getAuthor
POST    /admin/authors/:id          Admin:updateAuthor
DELETE  /admin/authors/:id          Admin:removeAuthor

POST    /admin/details              Admin:updateBlogData

GET     /admin/posts                Admin:getPosts (by requesting author)
POST    /admin/posts                Admin:addPost (needs to handle publish case)

POST    /admin/posts/:id            Admin:updatePost
DELETE  /admin/posts/:id            Admin:deletePost

POST    /admin/posts/:id/publish    Admin:publishPost
POST    /admin/posts/:id/unpublish  Admin:unpublishPost

GET     /details                    Blog:getDetails

GET     /posts                      Posts:getPosts
GET     /posts/:slug                Posts:getPost
GET     /posts/:authorid            Posts:getPostsByAuthor

GET     /authors                    Authors:getAuthors
GET     /authors/:id                Authors:getAuthor

